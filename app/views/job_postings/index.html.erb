<div>
    <h1 class="text-3xl font-bold"><%= t('.job')%></h1>

    <div class="my-10 flex flex-wrap">
        <% if @job_postings.any? %>
            <% @job_postings.each do |job| %>
                <div class="my-2 flex overflow-hidden rounded shadow-md text-slate-500 shadow-slate-200 p-5 mr-4">
                    <%= link_to job.title, job_posting_path(job), class: 'text-xl font-medium text-slate-700 hover:underline' %>
                    <span class="ml-5 text-white rounded-4xl px-4 <%= job.active? ? 'bg-green-700' : 'bg-red-600' %>"><p><%= JobPosting.translated_status(job.status) %></p></span>
                </div>
            <% end %>
        <% else %>
            <p><%= t('.dont_have_any_job')%></p>
        <% end %>
    </div>

    <%= paginate @job_postings %>
</div>

